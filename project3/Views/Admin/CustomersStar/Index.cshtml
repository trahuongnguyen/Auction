@using PagedList
@model IPagedList<project3.Models.CustomerStar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            UserName
        </th>
        <th>
            Sex
        </th>
        <th>
            Address
        </th>
        <th>
            PhoneNumber
        </th>
        <th>
            Email
        </th>
        <th>
            Star
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Star)
            </td>
            <td>
                @Html.ActionLink("Block", "Block", new { id = item.cus_ID })
            </td>
        </tr>
    }

</table>
<ul class="pagination">
    @for (int i = 1; i <= Model.PageCount; i++)
    {
        <li class="@(i == Model.PageNumber?"page-item active":"page-item") me-3">
            <a class="page-link" href="@Url.Action("Index", new{pi = i})">@i</a>
        </li>

    }
</ul>
