@model project3.Models.Auction

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="m-auto">Create Auction</h4>
        <hr />
        <div class="row">
            <div class="col-8">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group m-4">
                    @Html.LabelFor(model => model.NameAu, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="text" name="NameAu" class="form-control bg-gray border-0" id="floatingInput" />
                        @Html.ValidationMessageFor(model => model.NameAu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group m-4">
                    @Html.LabelFor(model => model.StartTime, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="datetime-local" name="StartTime" class="form-control bg-gray border-0" required="required"
                               data-validation-required-message="Please enter start time">
                        @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group m-4">
                    @Html.LabelFor(model => model.EndTime, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="datetime-local" name="EndTime" class="form-control bg-gray border-0" required="required"
                               data-validation-required-message="Please enter start time">
                        @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-4">
                <img src="~/Images/Admin/img/auction1.png" />
            </div>
        </div>

        <div class="form-group m-4">
            <table class="table text-start align-middle table-hover mb-0 table-striped">
                <thead>
                    <tr class="text-primary">
                        <th scope="col"></th>
                        <th scope="col">Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Start Date</th>
                        <th scope="col">End Date</th>
                        <th scope="col">Start Price</th>
                        <th scope="col">Price Step</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.ListPro != null)
                    {
                        foreach (project3.Models.Product item in ViewBag.ListPro)
                        {
                            <tr>
                                <td><a href="@Url.Action("Details", "Products", new { id = item.pro_ID })">Details</a></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NamePro)
                                </td>
                                <td>
                                    
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartingPrice)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StepPrice)
                                </td>
                                <td>
                                </td>
                                <td>
                                <td><input class="form-check-input" type="checkbox" name="proID" value="@item.pro_ID"></td>

                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="form-group">
            <div class="d-grid gap-2 col-2 mx-auto">
                <input type="submit" value="Create" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}

<div class="ms-4">
    @Html.ActionLink("Back to List", "Index")
</div>
