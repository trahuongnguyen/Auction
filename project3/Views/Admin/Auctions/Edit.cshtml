@model project3.Models.Auction
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Auction</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.au_ID)

        <div class="form-group m-4">
            @Html.LabelFor(model => model.NameAu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.NameAu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameAu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group m-4">
            @Html.LabelFor(model => model.StartTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group m-4">
            @Html.LabelFor(model => model.EndTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group m-4">
            <table class="table text-start align-middle table-hover mb-0 table-striped">
                <thead>
                    <tr class="text-primary">
                        <th scope="col">Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Start Date</th>
                        <th scope="col">End Date</th>
                        <th scope="col">Start Price</th>
                        <th scope="col">Price Step</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.ListPro != null)
                    {
                        foreach (project3.Models.Product item in ViewBag.ListPro)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NamePro)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartingPrice)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StepPrice)
                                </td>
                                <td>
                                </td>
                                <td>
                                    @{
                                        bool isChecked = false;
                                        if (ViewBag.ListProAu != null)
                                        {
                                            foreach (project3.Models.Product pro in ViewBag.ListProAu)
                                            {
                                                if (pro.pro_ID == item.pro_ID)
                                                {
                                                    isChecked = true;
                                                }
                                            }
                                        }
                                    }
                                <td>
                                    <input class="form-check-input" type="checkbox" name="proID" checked="@isChecked" value="@item.pro_ID" />
                                </td>

                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="form-group">
            <div class="d-grid gap-2 col-2 mx-auto">
                <input type="submit" value="Save" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}

<div class="ms-4">
    @Html.ActionLink("Back to List", "Index")
</div>
