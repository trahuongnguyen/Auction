@model IEnumerable<project3.Models.Bid>

@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="~/">Home</a>
                <a class="breadcrumb-item text-dark" href="~/User/Shop">Shop</a>
                <span class="breadcrumb-item active">History Bid</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Products</th>
                        <th>Price</th>
                        <th>Time Action</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @if (Model != null)
                    {
                        foreach (project3.Models.Bid item in Model)
                        {
                            <tr>
                                <td class="align-middle">
                                    @if (item.REL_Pro_Au != null)
                                    {
                                        if (item.REL_Pro_Au.Product.Images.ElementAt(0).Img != null && item.REL_Pro_Au.Product.Images.ElementAt(0).Img.Length > 0)
                                        {
                                            <img src="data:image; base64, @System.Convert.ToBase64String(item.REL_Pro_Au.Product.Images.ElementAt(0).Img)" alt="" style="width: 50px;">
                                            @item.REL_Pro_Au.Product.NamePro
                                        }
                                    }
                                </td>
                                <td class="align-middle">$@item.Price</td>
                                <td class="align-middle">
                                    @item.Time
                                </td>

                                @if (item.cus_ID == item.REL_Pro_Au.Product.REL_Or_Pro.ElementAt(0).Order.cus_ID)
                                {
                                    <td class="align-middle">Successfully</td>
                                }
                                else
                                {
                                    <td class="align-middle">Unsuccessfully</td>
                                }
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
<!-- Cart End -->
