@model IEnumerable<project3.Models.Auction>
@{
    ViewBag.Title = "Auction";
    Layout = "~/Views/Shared/_Layout.cshtml";
    project3.Models.dbauctionsystemEntities db = new project3.Models.dbauctionsystemEntities();
    List<project3.Models.Auction> auctions = db.Auctions.ToList();
}

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Home</a>
                <a class="breadcrumb-item text-dark" href="#">Shop</a>
                <span class="breadcrumb-item active">Auction</span>
            </nav>
        </div>
    </div>
</div>


<!-- Breadcrumb End -->
<!-- Offer Start -->
<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <h2>Current Auction</h2>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $("[data-countdown]").each(function () {
        var $this = $(this), finalDate = $(this).data('countdown');
        $this.countdown(finalDate, function (event) {
            $this.html(event.strftime('%D days %H:%M:%S'))
        }).on('finish.countdown', function () {
            $this.html("Finish");
        });
    });
</script>
<!-- Breadcrumb End -->
<div class="container-fluid pt-5 pb-3">
    <div class="row px-xl-5 ">
        <div class="col owl-carousel related-carousel-auction ">
            @if (Model != null)
            {
                foreach (project3.Models.Auction item in Model)
                {
                    <div class="product-offer mb-30" style="height: 300px;">
                        <img class="img-fluid" src="data:image; base64, @System.Convert.ToBase64String(@item.REL_Pro_Au.ElementAt(0).Product.Images.ElementAt(0).Img)" alt="">
                        <div class="offer-text">
                            <h6 class="text-white text-uppercase countdown" id="countdown" data-countdown="@item.EndTime"></h6>
                            <h3 class="text-white mb-3">@item.NameAu</h3>
                            <a href="~/User/Shop/Index?au_ID=@item.au_ID" id="disabled" class="btn btn-primary timeout">Go to auction</a>
                        </div>
                    </div>
                }
            }
        </div>


    </div>
</div>
<!-- Offer End -->
<!-- Offer Start -->
<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <h2>Upcoming Auction</h2>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<div class="container-fluid pt-5 pb-3">
    <div class="row px-xl-5 ">
        <div class="col owl-carousel related-carousel-auction ">

            @if (ViewBag.Auctions != null)
            {
                foreach (project3.Models.Auction item in ViewBag.Auctions)
                {

                    <div class="product-offer mb-30" style="height: 300px;">
                        <img class="img-fluid" src="data:image; base64, @System.Convert.ToBase64String(@item.REL_Pro_Au.ElementAt(0).Product.Images.ElementAt(0).Img)" alt="">
                        <div class="offer-text">
                            <h6 class="text-white text-uppercase countdown" id="countdown"  data-countdown="@item.EndTime"></h6>
                            <h3 class="text-white mb-3">@item.NameAu</h3>
                            <a href="~/User/Shop/Index?au_ID=@item.au_ID" aria-disabled="true" id="disabled" class="btn btn-primary upcoming">Go to auction</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <!-- Offer End -->
</div>